{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "oz4899/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name" : "server",
            "image" : "oz4899/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name" : "worker",
            "image" : "oz4899/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name" : "nginx",
            "image" : "oz4899/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }
    ]

}